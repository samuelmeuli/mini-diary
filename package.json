{
	"name": "mini-diary",
	"productName": "Mini Diary",
	"version": "2.4.3",
	"description": "Simple and secure journal app",
	"main": "./bundle/main.js",
	"author": {
		"name": "Samuel Meuli",
		"email": "me@samuelmeuli.com",
		"url": "https://samuelmeuli.com"
	},
	"repository": "github:samuelmeuli/mini-diary",
	"homepage": "https://minidiary.app",
	"license": "MIT",
	"private": true,
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"start": "npm-run-all start:ts --parallel start:app 'start:ts:* --watch'",
		"start:ts": "run-p start:ts:*",
		"start:ts:main": "webpack --config ./webpack.main.js --mode development",
		"start:ts:renderer": "webpack --config ./webpack.renderer.js --mode development",
		"start:app": "electron .",
		"build": "run-s build:*",
		"build:clean": "rm -rf ./bundle ./dist",
		"build:ts": "run-p build:ts:*",
		"build:ts:main": "webpack --config ./webpack.main.js --mode production",
		"build:ts:renderer": "webpack --config ./webpack.renderer.js --mode production",
		"website:start": "npm-run-all website:build:css --parallel website:start:*",
		"website:start:serve": "serve ./website --listen 3000",
		"website:start:ts": "tsc ./website/index.ts --watch",
		"website:build": "run-p website:build:*",
		"website:build:css": "cp ./node_modules/minireset.css/minireset.min.css ./website/styles/",
		"website:build:ts": "tsc ./website/index.ts",
		"test": "run-s test:*",
		"test:jest": "cross-env TZ=GMT jest",
		"test:types": "tsc --noEmit",
		"format": "prettier --write",
		"lint:css": "stylelint --fix --max-warnings 0",
		"lint:scss": "stylelint --fix --max-warnings 0 --syntax scss",
		"lint:js": "eslint --ext .js,.jsx --fix --max-warnings 0",
		"lint:ts": "eslint --ext .ts,.tsx --fix --max-warnings 0"
	},
	"dependencies": {
		"@svgr/webpack": "^4.3.3",
		"@types/draft-js": "^0.10.36",
		"@types/electron-settings": "^3.1.1",
		"@types/lodash.debounce": "^4.0.6",
		"@types/react": "^16.9.5",
		"@types/react-dom": "^16.9.1",
		"@types/react-redux": "^7.1.4",
		"@types/redux-logger": "^3.0.7",
		"@types/semver": "^6.0.2",
		"draft-js": "^0.11.1",
		"draft-js-list-plugin": "^1.0.0",
		"draft-js-plugins-editor": "^3.0.0",
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-md-to-pdf": "^2.0.0",
		"electron-settings": "^3.2.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.14",
		"electron-util": "^0.13.0",
		"feather-icons": "^4.22.1",
		"license-checker-webpack-plugin": "^0.1.2",
		"lodash.debounce": "^4.0.8",
		"markdown-draft-js": "^2.1.1",
		"minireset.css": "^0.0.6",
		"minisearch": "^2.1.1",
		"moment": "^2.22.2",
		"react": "^16.10.2",
		"react-day-picker": "github:samuelmeuli/react-day-picker",
		"react-dom": "^16.10.2",
		"react-redux": "^7.1.1",
		"redux": "^4.0.0",
		"redux-logger": "^3.0.6",
		"redux-thunk": "^2.3.0",
		"remark": "^11.0.0",
		"remark-stringify": "^7.0.3",
		"semver": "^6.1.2",
		"strip-markdown": "^3.1.0",
		"type-fest": "^0.8.1"
	},
	"devDependencies": {
		"@babel/core": "^7.6.4",
		"@babel/plugin-proposal-class-properties": "^7.5.5",
		"@babel/preset-env": "^7.6.3",
		"@babel/preset-react": "^7.6.3",
		"@babel/preset-typescript": "^7.6.0",
		"@samuelmeuli/eslint-config": "^4.0.1",
		"@samuelmeuli/stylelint-config": "^1.0.3",
		"@samuelmeuli/tsconfig": "^0.2.0",
		"@typescript-eslint/eslint-plugin": "^2.3.3",
		"@typescript-eslint/parser": "^2.3.3",
		"babel-loader": "^8.0.6",
		"cross-env": "^6.0.3",
		"css-loader": "^3.0.0",
		"electron": "^7.1.1",
		"electron-builder": "^22.1.0",
		"electron-notarize": "^0.2.0",
		"eslint": "6.5.1",
		"eslint-config-airbnb": "18.0.1",
		"eslint-config-prettier": "^6.4.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.16.0",
		"eslint-plugin-react-hooks": "^1.7.0",
		"eslint-plugin-simple-import-sort": "^4.0.0",
		"html-webpack-plugin": "^3.2.0",
		"husky": "^3.0.9",
		"jest": "^24.8.0",
		"lint-staged": "^9.4.2",
		"mockdate": "^2.0.3",
		"node-sass": "^4.9.2",
		"npm-run-all": "^4.1.3",
		"prettier": "^1.18.2",
		"sass-loader": "^8.0.0",
		"serve": "^11.2.0",
		"style-loader": "^1.0.0",
		"stylelint": "^11.1.1",
		"typescript": "^3.6.4",
		"webpack": "^4.41.1",
		"webpack-cli": "^3.3.9",
		"webpack-merge": "^4.2.2"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "10"
					}
				}
			],
			"@babel/preset-react",
			"@babel/preset-typescript"
		],
		"plugins": [
			"@babel/plugin-proposal-class-properties"
		]
	},
	"jest": {
		"moduleNameMapper": {
			"electron": "<rootDir>/tests/setup/electron-mock.js"
		},
		"setupFiles": [
			"<rootDir>/tests/setup/setup.js"
		]
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"@samuelmeuli/eslint-config/typescript-react"
		],
		"env": {
			"browser": true,
			"node": true,
			"jest": true
		},
		"settings": {
			"import/core-modules": [
				"electron"
			]
		},
		"rules": {
			"import/no-extraneous-dependencies": [
				"error",
				{
					"devDependencies": [
						"tests/**/*",
						"webpack.*.js"
					]
				}
			],
			"jsx-a11y/no-autofocus": "off"
		}
	},
	"stylelint": {
		"extends": "@samuelmeuli/stylelint-config"
	},
	"prettier": {
		"printWidth": 100,
		"trailingComma": "all"
	},
	"lint-staged": {
		"*.{js,jsx}": [
			"yarn lint:js",
			"yarn format",
			"git add"
		],
		"*.{ts,tsx}": [
			"yarn lint:ts",
			"yarn format",
			"git add"
		],
		"*.css": [
			"yarn lint:css",
			"yarn format",
			"git add"
		],
		"*.scss": [
			"yarn lint:scss",
			"yarn format",
			"git add"
		],
		"*.{json,md,yml}": [
			"yarn format",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn test && lint-staged"
		}
	},
	"build": {
		"appId": "com.samuelmeuli.minidiary",
		"files": [
			"!**/*",
			"./bundle/**/*"
		],
		"extraResources": [
			{
				"from": "./bundle/licenses-main.txt",
				"to": "./licenses-main.txt"
			},
			{
				"from": "./bundle/licenses-renderer.txt",
				"to": "./licenses-renderer.txt"
			}
		],
		"afterPack": "./scripts/after-pack.js",
		"afterSign": "./scripts/notarize.js",
		"mac": {
			"category": "public.app-category.lifestyle",
			"darkModeSupport": true,
			"electronLanguages": [
				"de",
				"de_AT",
				"de_CH",
				"de_DE",
				"el",
				"en",
				"en_AU",
				"en_CA",
				"en_GB",
				"en_NZ",
				"en_US",
				"en_ZA",
				"es",
				"es_419",
				"fr",
				"fr_CA",
				"fr_CH",
				"fr_FR",
				"is",
				"pt",
				"pt_BR",
				"pt_PT",
				"tr",
				"zh"
			],
			"entitlements": "./build/entitlements.mac.plist",
			"entitlementsInherit": "./build/entitlements.mac.plist",
			"hardenedRuntime": true,
			"gatekeeperAssess": false
		},
		"linux": {
			"category": "Utility"
		},
		"dmg": {
			"icon": false
		}
	}
}
